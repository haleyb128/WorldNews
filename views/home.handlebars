<div class="container">
    {{#each articles}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src={{image}} alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{summary}}</p>
            <a href={{article.link}} class="btn btn-primary">Full Article</a>
        </div>
    </div>
</div>

